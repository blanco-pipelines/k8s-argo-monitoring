apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: automation-gateway
  namespace: argocd
  finalizers:
    - resources-finalizer.argocd.argoproj.io
spec:
  project: default
  source:
    repoURL: k8s-repo
    targetRevision: HEAD
    path: apps/automation-gateway
  destination:
    server: https://kubernetes.default.svc
    namespace: automation-gateway
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
